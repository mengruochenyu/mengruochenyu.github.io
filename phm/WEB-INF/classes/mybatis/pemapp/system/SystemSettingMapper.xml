<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SystemSettingMapper">
	<resultMap type="SystemSetting" id="systemSettingResultMap">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="code" property="code"/>
		<result column="string_value" property="stringValue"/>
		<result column="double_value" property="doubleValue"/>
		<result column="int_value" property="intValue"/>
		<result column="index" property="index"/>
		<result column="content" property="content"/>
		<result column="remark" property="remark"/>
		<result column="del_flag" property="delFlag"/>
		<result column="create_user_id" property="createUserId"/>
		<result column="create_time" property="createTime"/>
		<result column="update_user_id" property="updateUserId"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>
	
	<!-- 新增-->
	<insert id="save" parameterType="SystemSetting" useGeneratedKeys="true" 
		keyProperty="id">
		insert into p_system_setting(
			name,
			code,
			string_value,
			double_value,
			int_value,
			index,
			content,
			remark,
			create_user_id,
			create_time
		) values (
			#{name},
			#{code},
			#{stringValue},
			#{doubleValue},
			#{intValue},
			#{index},
			#{content},
			#{remark},
			#{createUserId},
			#{createTime}
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="java.lang.Long">
		delete from p_system_setting
		where
				id = #{value}
	</delete>
	
	<!-- 软删除-->
	<update id="deleteLogical" parameterType="java.lang.Long">
		update p_system_setting set del_flag=1
		where id = #{value}
	</update>

	<!-- 修改 -->
	<update id="update" parameterType="SystemSetting">
		update p_system_setting
			set 
			<if test="name!=null and name!=''">
				`name` = #{name},
			</if>
			
			<if test="code!=null and code!=''">
				`code` = #{code},
			</if>
			
			<if test="stringValue!=null and stringValue!=''">
				`string_value` = #{stringValue},
			</if>
			
			<if test="doubleValue!=null">
				`double_value` = #{doubleValue},
			</if>
			<if test="intValue!=null">
				`int_value` = #{intValue},
			</if>
			<if test="index!=null">
				`index` = #{index},
			</if>
			<if test="content!=null and content!=''">
				`content` = #{content},
			</if>
			
			<if test="remark!=null and remark!=''">
				`remark` = #{remark},
			</if>
			
		<if test="updateUserId!=null and updateUserId!=''">
			update_user_id = #{updateUserId},
		</if>
		<if test="updateTime!=null">
			update_time = #{updateTime},
		</if>
			id = id
			where
				id = #{id}
	</update>
	
	
	<!-- 通过id获取数据 -->
	<select id="findById" parameterType="java.lang.Long" resultMap="systemSettingResultMap">
		select * from 
			p_system_setting
		where 
			id = #{value}
	</select>
	
	<!-- 条件查询 -->
	<select id="findByCondition" parameterType="SystemSetting" resultMap="systemSettingResultMap">
		select * from 
			p_system_setting where del_flag=0
			<if test="name!=null and name!=''">
				and `name` = #{name}
			</if>
			<if test="code!=null and code!=''">
				and `code` = #{code}
			</if>
			<if test="stringValue!=null and stringValue!=''">
				and `string_value` = #{stringValue}
			</if>
			<if test="doubleValue!=null">
				and `double_value` = #{doubleValue}
			</if>
			<if test="intValue!=null">
				and `int_value` = #{intValue}
			</if>
			<if test="index!=null">
				and `index` = #{index}
			</if>
			<if test="content!=null and content!=''">
				and `content` = #{content}
			</if>
			<if test="remark!=null and remark!=''">
				and `remark` = #{remark}
			</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultMap="systemSettingResultMap">
		select * from 
				p_system_setting a where del_flag=0
		<if test="pd.query_time_start!=null and pd.query_time_start!=''"><!-- 时间检索 -->
			and a.create_time &gt;= #{pd.query_time_start}
		</if>
		<if test="pd.query_time_end!=null and pd.query_time_end!=''"><!-- 时间检索 -->
			and a.create_time &lt;= #{pd.query_time_end}
		</if>	
		<if test="pd.query_key!=null and pd.query_key!=''"><!-- 关键字检索 -->
			and a.name like concat('%',#{pd.query_key},'%')
		</if>
			order by id desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="String" resultMap="systemSettingResultMap">
		select * from p_system_setting a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteBatch" parameterType="String">
		delete from p_system_setting
		where id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 批量删除 -->
	<update id="deleteLogicalBatch" parameterType="String">
		update p_system_setting set del_flag=1  
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</update>
	
</mapper>