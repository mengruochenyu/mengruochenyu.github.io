<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DoctorTrainRecordMapper">
	<resultMap type="DoctorTrainRecord" id="doctorTrainRecordResultMap">
		<id column="id" property="id"/>
		<result column="doctor_id" property="doctorId"/>
		<result column="train_name" property="trainName"/>
		<result column="finish_time" property="finishTime"/>
		<result column="remark" property="remark"/>
		<result column="del_flag" property="delFlag"/>
		<result column="create_user_id" property="createUserId"/>
		<result column="create_time" property="createTime"/>
		<result column="update_user_id" property="updateUserId"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>
	
	<!-- 新增-->
	<insert id="save" parameterType="DoctorTrainRecord" useGeneratedKeys="true" 
		keyProperty="id">
		insert into p_doctor_train_record(
			doctor_id,
			train_name,
			finish_time,
			remark,
			create_user_id,
			create_time
		) values (
			#{doctorId},
			#{trainName},
			#{finishTime},
			#{remark},
			#{createUserId},
			#{createTime}
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="java.lang.Long">
		delete from p_doctor_train_record
		where
				id = #{value}
	</delete>
	
	<!-- 软删除-->
	<update id="deleteLogical" parameterType="java.lang.Long">
		update p_doctor_train_record set del_flag=1
		where id = #{value}
	</update>

	<!-- 修改 -->
	<update id="update" parameterType="DoctorTrainRecord">
		update p_doctor_train_record
			set 
			<if test="doctorId!=null">
				`doctor_id` = #{doctorId},
			</if>
			<if test="trainName!=null and trainName!=''">
				`train_name` = #{trainName},
			</if>
			
			<if test="finishTime!=null">
				`finish_time` = #{finishTime},
			</if>
			<if test="remark!=null and remark!=''">
				`remark` = #{remark},
			</if>
			
		<if test="updateUserId!=null and updateUserId!=''">
			update_user_id = #{updateUserId},
		</if>
		<if test="updateTime!=null">
			update_time = #{updateTime},
		</if>
			id = id
			where
				id = #{id}
	</update>
	
	
	<!-- 通过id获取数据 -->
	<select id="findById" parameterType="java.lang.Long" resultMap="doctorTrainRecordResultMap">
		select * from 
			p_doctor_train_record
		where 
			id = #{value}
	</select>
	
	<!-- 条件查询 -->
	<select id="findByCondition" parameterType="DoctorTrainRecord" resultMap="doctorTrainRecordResultMap">
		select * from 
			p_doctor_train_record where del_flag=0
			<if test="doctorId!=null">
				and `doctor_id` = #{doctorId}
			</if>
			<if test="trainName!=null and trainName!=''">
				and `train_name` = #{trainName}
			</if>
			<if test="finishTime!=null">
				`finish_time` = #{finishTime},
			</if>
			<if test="remark!=null and remark!=''">
				and `remark` = #{remark}
			</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultMap="doctorTrainRecordResultMap">
		select * from 
				p_doctor_train_record a where del_flag=0
		<if test="pd.query_time_start!=null and pd.query_time_start!=''"><!-- 时间检索 -->
			and a.create_time &gt;= #{pd.query_time_start}
		</if>
		<if test="pd.query_time_end!=null and pd.query_time_end!=''"><!-- 时间检索 -->
			and a.create_time &lt;= #{pd.query_time_end}
		</if>	
		<if test="pd.query_key!=null and pd.query_key!=''"><!-- 关键字检索 -->
			and a.name like concat('%',#{pd.query_key},'%')
		</if>
			order by doctor_id desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="String" resultMap="doctorTrainRecordResultMap">
		select * from p_doctor_train_record a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteBatch" parameterType="String">
		delete from p_doctor_train_record
		where id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 批量删除 -->
	<update id="deleteLogicalBatch" parameterType="String">
		update p_doctor_train_record set del_flag=1  
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</update>
	
	<!-- 获取医生的培训记录 -->
	<select id="listByDoctorId" parameterType="Long" resultType="pd">
		select a.train_name trainName, a.finish_time finishTime from p_doctor_train_record a 
		where a.doctor_id = #{doctorId}
	</select>
	
</mapper>