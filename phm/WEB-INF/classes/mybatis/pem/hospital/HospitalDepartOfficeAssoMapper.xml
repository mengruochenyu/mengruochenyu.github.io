<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="HospitalDepartOfficeAssoMapper">
	<resultMap type="HospitalDepartOfficeAsso" id="hospitalDepartOfficeAssoResultMap">
		<id column="id" property="id"/>
		<result column="department_id" property="departmentId"/>
		<result column="office_id" property="officeId"/>
		<result column="create_user_id" property="createUserId"/>
		<result column="create_time" property="createTime"/>
		<result column="update_user_id" property="updateUserId"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>
	
	<!-- 新增-->
	<insert id="save" parameterType="HospitalDepartOfficeAsso" useGeneratedKeys="true" keyProperty="id">
		insert into hospital_depart_office_asso(
			department_id,
			office_id,
			create_user_id,
			create_time
		) values (
			#{departmentId},
			#{officeId},
			#{createUserId},
			#{createTime}
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="java.lang.Long">
		delete from hospital_depart_office_asso
		where 
			id = #{value}
	</delete>

	<!-- 修改 -->
	<update id="update" parameterType="HospitalDepartOfficeAsso">
		update hospital_depart_office_asso
			set 
			<if test="departmentId!=null">
				department_id = #{departmentId},
			</if>
			<if test="officeId!=null">
				office_id = #{officeId},
			</if>
			id = id
			where 
				id = #{id}
	</update>
	
	
	<!-- 通过id获取数据 -->
	<select id="findById" parameterType="java.lang.Long" resultMap="hospitalDepartOfficeAssoResultMap">
		select * from 
			hospital_depart_office_asso
		where 
			id = #{value}
	</select>
	
	<!-- 条件查询 -->
	<select id="findByCondition" parameterType="HospitalDepartOfficeAsso" resultMap="hospitalDepartOfficeAssoResultMap">
		select * from 
			hospital_depart_office_asso where 1=1
			<if test="createUserId!=null and createUserId!=''">
				and create_user_id = #{createUserId}
			</if>
			<if test="departmentId!=null">
				and department_id = #{departmentId}
			</if>
			<if test="officeId!=null">
				and office_id = #{officeId}
			</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultMap="hospitalDepartOfficeAssoResultMap">
		select * from 
				hospital_depart_office_asso a where 1=1
		<if test="pd.query_time_start!=null and pd.query_time_start!=''"><!-- 时间检索 -->
			and a.create_time &gt;= #{pd.query_time_start}
		</if>
		<if test="pd.query_time_end!=null and pd.query_time_end!=''"><!-- 时间检索 -->
			and a.create_time &lt;= #{pd.query_time_end}
		</if>
			order by a.create_time desc	
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="String" resultMap="hospitalDepartOfficeAssoResultMap">
		select * from hospital_depart_office_asso a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteBatch" parameterType="String">
		delete from hospital_depart_office_asso
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>

    <!--根据部门id删除-->
    <delete id="deleteByDepartmentId" parameterType="long">
        DELETE FROM hospital_depart_office_asso WHERE department_id=#{departmetnId}
    </delete>

    <!--批量保存-->
    <insert id="batchSave" parameterType="list">
        insert into hospital_depart_office_asso(
        office_id,
        department_id,
        create_user_id,
        create_time
        )
        values
        <foreach collection ="list" item="item" index= "index" separator =",">
            (
            #{item.officeId},
            #{item.departmentId},
            #{item.createUserId},
            #{item.createTime}
            )
        </foreach>
    </insert>
	
</mapper>