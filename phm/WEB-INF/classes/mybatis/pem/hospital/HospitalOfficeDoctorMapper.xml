<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="HospitalOfficeDoctorMapper">
	<resultMap type="HospitalOfficeDoctor" id="hospitalOfficeDoctorResultMap">
		<id column="id" property="id"/>
		<result column="office_id" property="officeId"/>
		<result column="doctor_name" property="doctorName"/>
		<result column="remark" property="remark"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
	</resultMap>
	
	<!-- 新增-->
	<insert id="save" parameterType="HospitalOfficeDoctor" useGeneratedKeys="true" keyProperty="id">
		insert into hospital_office_doctor(
        office_id,
        doctor_name,
        remark,
        create_user_id,
        create_time
		) values (
            #{officeId},
            #{doctorName},
            #{remark},
        #{createUserId},
        #{createTime}
		)
	</insert>

    <!--批量新增-->
    <insert id="batchSave" parameterType="list">
        insert into hospital_office_doctor(
            office_id,
            doctor_name,
            remark,
            create_user_id,
            create_time
        )
        values
        <foreach collection ="list" item="item" index= "index" separator =",">
        (
            #{item.office_id},
            #{item.doctor_name},
            #{item.remark},
            #{item.createUserId},
            #{item.createTime}
        )
        </foreach>
    </insert>

	<!-- 删除-->
	<update id="deleteLogical" parameterType="java.lang.Long">
		delete from hospital_office_doctor
		where 
			id = #{value}
	</update>

	<!-- 修改 -->
	<update id="update" parameterType="HospitalOfficeDoctor">
		update hospital_office_doctor
			set 
			<if test="officeId!=null">
				office_id = #{officeId},
			</if>
			<if test="doctorName!=null and doctorName!=''">
				doctor_name = #{doctorName},
			</if>
			<if test="remark!=null and remark!=''">
				remark = #{remark},
			</if>
			id = id
			where 
				id = #{id}
	</update>
	
	
	<!-- 通过id获取数据 -->
	<select id="findById" parameterType="java.lang.Long" resultMap="hospitalOfficeDoctorResultMap">
		select * from 
			hospital_office_doctor
		where 
			id = #{value}
	</select>
	
	<!-- 条件查询 -->
	<select id="findByCondition" parameterType="HospitalOfficeDoctor" resultMap="hospitalOfficeDoctorResultMap">
		select * from 
			hospital_office_doctor where 1=1
			<if test="createUserId!=null and createUserId!=''">
				and create_user_id = #{createUserId}
			</if>
			<if test="officeId!=null">
				and office_id = #{officeId}
			</if>
			<if test="doctorName!=null and doctorName!=''">
				and doctor_name = #{doctorName}
			</if>
			<if test="remark!=null and remark!=''">
				and remark = #{remark}
			</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultMap="hospitalOfficeDoctorResultMap">
		select * from 
				hospital_office_doctor a where 1=1
		<if test="pd.query_time_start!=null and pd.query_time_start!=''"><!-- 时间检索 -->
			and a.create_time &gt;= #{pd.query_time_start}
		</if>
		<if test="pd.query_time_end!=null and pd.query_time_end!=''"><!-- 时间检索 -->
			and a.create_time &lt;= #{pd.query_time_end}
		</if>	
		<if test="pd.query_key!=null and pd.query_key!=''"><!-- 关键字检索 -->
			and a.name like concat('%',#{pd.query_key},'%')
		</if>
		<if test="pd.officeId!=null and pd.officeId!=''"><!-- 关键字检索 -->
			and a.office_id =#{pd.officeId}
		</if>
			order by a.create_time desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="String" resultMap="hospitalOfficeDoctorResultMap">
		select * from hospital_office_doctor a
	</select>
	
	<!-- 批量删除 -->
	<update id="deleteLogicalBatch" parameterType="String">
		delete from hospital_office_doctor
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</update>
	
</mapper>