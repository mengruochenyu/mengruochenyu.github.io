<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="HospitalAccountMapper">
	<resultMap type="HospitalAccount" id="hospitalAccountResultMap">
		<id column="id" property="id"/>
		<result column="hospital_id" property="hospitalId"/>
		<result column="name" property="name"/>
		<result column="password" property="password"/>
		<result column="role_id" property="roleId"/>
		<result column="create_user_id" property="createUserId"/>
		<result column="create_time" property="createTime"/>
		<result column="update_user_id" property="updateUserId"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>
	
	<!-- 新增-->
	<insert id="save" parameterType="HospitalAccount" useGeneratedKeys="true" keyProperty="id">
		insert into hospital_account(
			hospital_id,
			name,
			password,
			role_id,
			create_user_id,
			create_time
		) values (
			#{hospitalId},
			#{name},
			#{password},
			#{roleId},
			#{createUserId},
			#{createTime}
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="java.lang.Long">
		delete from hospital_account
		where 
			id = #{value}
	</delete>

	<!-- 修改 -->
	<update id="update" parameterType="HospitalAccount">
		update hospital_account
			set 
			<if test="hospitalId!=null">
				hospital_id = #{hospitalId},
			</if>
			<if test="name!=null and name!=''">
				name = #{name},
			</if>
			<if test="password!=null and password!=''">
				password = #{password},
			</if>
			<if test="roleId!=null">
				role_id = #{roleId},
			</if>
			id = id
			where 
				id = #{id}
	</update>
	
	
	<!-- 通过id获取数据 -->
	<select id="findById" parameterType="java.lang.Long" resultMap="hospitalAccountResultMap">
		select * from 
			hospital_account
		where 
			id = #{value}
	</select>
	
	<!-- 条件查询 -->
	<select id="findByCondition" parameterType="HospitalAccount" resultMap="hospitalAccountResultMap">
		select * from 
			hospital_account where 1=1
			<if test="createUserId!=null and createUserId!=''">
				and create_user_id = #{createUserId}
			</if>
			<if test="hospitalId!=null">
				and hospital_id = #{hospitalId}
			</if>
			<if test="name!=null and name!=''">
				and name = #{name}
			</if>
			<if test="password!=null and password!=''">
				and password = #{password}
			</if>
			<if test="roleId!=null">
				and role_id = #{roleId}
			</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultMap="hospitalAccountResultMap">
		select * from 
				hospital_account a where 1=1
		<if test="pd.query_time_start!=null and pd.query_time_start!=''"><!-- 时间检索 -->
			and a.create_time &gt;= #{pd.query_time_start}
		</if>
		<if test="pd.query_time_end!=null and pd.query_time_end!=''"><!-- 时间检索 -->
			and a.create_time &lt;= #{pd.query_time_end}
		</if>
			<if test="pd.name!=null and pd.name!=''"><!-- 关键字检索 -->
				and a.name like concat('%',#{pd.name},'%')
			</if>
			order by a.create_time desc	
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="String" resultMap="hospitalAccountResultMap">
		select * from hospital_account a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteBatch" parameterType="String">
		delete from hospital_account
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
</mapper>