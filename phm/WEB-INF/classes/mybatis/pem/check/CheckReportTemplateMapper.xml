<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CheckReportTemplateMapper">
	<resultMap type="CheckReportTemplate" id="checkReportTemplateResultMap">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="echart_type" property="echartType"/>
		<result column="degree" property="degree"/>
		<result column="check_sheet_id" property="checkSheetId"/>
		<result column="rang_min" property="rangMin"/>
		<result column="rang_max" property="rangMax"/>
		<result column="comment" property="comment"/>
		<result column="suggest" property="suggest"/>
		<result column="create_user_id" property="createUserId"/>
		<result column="create_time" property="createTime"/>
		<result column="update_user_id" property="updateUserId"/>
		<result column="update_time" property="updateTime"/>

        <association property="checkSheetName" column="check_sheet_id" select="selectCheckSheetNameById"></association>
	</resultMap>

    <!--根据体检表id查询名称-->
    <select id="selectCheckSheetNameById" parameterType="long" resultType="String">
        SELECT name FROM check_sheet WHERE id=#{VALUE}
    </select>

	<!-- 新增-->
	<insert id="save" parameterType="CheckReportTemplate" useGeneratedKeys="true" keyProperty="id">
		insert into check_report_template(
			name,
			echart_type,
			degree,
			check_sheet_id,
			rang_min,
			rang_max,
			comment,
			suggest,
			create_user_id,
			create_time
		) values (
			#{name},
			#{echartType},
			#{degree},
			#{checkSheetId},
			#{rangMin},
			#{rangMax},
			#{comment},
			#{suggest},
			#{createUserId},
			#{createTime}
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="java.lang.Long">
		delete from check_report_template
		where 
			id = #{value}
	</delete>
	<!-- 软删除-->
	<delete id="deleteLogical" parameterType="java.lang.Long">
		delete from check_report_template
		where
			id = #{value}
	</delete>

	<!-- 修改 -->
	<update id="update" parameterType="CheckReportTemplate">
		update check_report_template
			set 
			<if test="name != null and name != ''">
				name = #{name},
			</if>
			<if test="echartType!= null">
                echart_type = #{echartType},
			</if>
			<if test="degree!= null">
                degree = #{degree},
			</if>
			<if test="checkSheetId != null">
				check_sheet_id = #{checkSheetId},
			</if>
			<if test="rangMin >= 0">
				rang_min = #{rangMin},
			</if>
			<if test="rangMax >0">
				rang_max = #{rangMax},
			</if>
			<if test="comment != null and comment != ''">
				comment = #{comment},
			</if>
			<if test="suggest != null and suggest != ''">
				suggest = #{suggest},
			</if>
			id = id
			where 
				id = #{id}
	</update>
	
	
	<!-- 通过id获取数据 -->
	<select id="findById" parameterType="java.lang.Long" resultMap="checkReportTemplateResultMap">
		select * from 
			check_report_template
		where 
			id = #{value}
	</select>
	
	<!-- 条件查询 -->
	<select id="findByCondition" parameterType="CheckReportTemplate" resultMap="checkReportTemplateResultMap">
		select * from 
			check_report_template where 1=1
			<if test="createUserId != null and createUserId != ''">
				and create_user_id = #{createUserId}
			</if>
			<if test="name != null and name != ''">
				and name = #{name}
			</if>
            <if test="echartType!= null">
                and echart_type = #{echartType}
            </if>
            <if test="degree!= null">
                and degree = #{degree}
			</if>
			<if test="checkSheetId != null">
				and check_sheet_id = #{checkSheetId}
			</if>
			<if test="comment != null and comment != ''">
				and comment = #{comment}
			</if>
			<if test="suggest != null and suggest != ''">
				and suggest = #{suggest}
			</if>
            ORDER BY rang_min
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultMap="checkReportTemplateResultMap">
		select a.* from
				check_report_template a
        LEFT JOIN check_sheet b ON a.check_sheet_id=b.id
        where 1=1
		<if test="pd.query_time_start != null and pd.query_time_start!=''"><!-- 时间检索 -->
			and a.create_time &gt;= #{pd.query_time_start}
		</if>
		<if test="pd.query_time_end!=null and pd.query_time_end != ''"><!-- 时间检索 -->
			and a.create_time &lt;= #{pd.query_time_end}
		</if>
		<if test="pd.name != null and pd.name != ''"><!-- 关键字检索 -->
			and b.name like concat('%',#{pd.name},'%')
		</if>
        <if test="pd.echartType!= null">
            and echart_type = #{pd.echartType}
        </if>
		order by check_sheet_id,rang_min, a.create_time desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="String" resultMap="checkReportTemplateResultMap">
		select * from check_report_template a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteBatch" parameterType="String">
		delete from check_report_template
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	<!-- 列表(全部) -->
	<select id="getSheetDegreeList" parameterType="Long" resultType="pd">
		select a.degree from check_report_template a 
		where a.check_sheet_id = #{sheetId}
	</select>
</mapper>