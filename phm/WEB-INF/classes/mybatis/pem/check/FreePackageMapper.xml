<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FreePackageMapper">
	<resultMap type="FreePackage" id="freePackageResultMap">
		<id column="id" property="id"/>
		<result column="office_id" property="officeId"/>
		<result column="free_package_id" property="freePackageId"/>
		<result column="reserve_package_id" property="reservePackageId"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
	</resultMap>
	
	<!-- 新增-->
	<insert id="save" parameterType="FreePackage" useGeneratedKeys="true" keyProperty="id">
		insert into check_free_package(
        office_id,
        free_package_id,
        reserve_package_id,
        create_user_id,
        create_time
		) values (
            #{officeId},
            #{freePackageId},
            #{reservePackageId},
            #{createUserId},
            #{createTime}
		)
	</insert>

    <!--批量新增-->
    <insert id="batchSave" parameterType="list">
        insert into check_free_package(
        office_id,,
            free_package_id,
            reserve_package_id,
            create_user_id,
            create_time
        )
        values
        <foreach collection ="list" item="item" index= "index" separator =",">
        (
            #{item.officeId},
            #{item.freePackageId},
            #{item.reservePackageId},
            #{item.createUserId},
            #{item.createTime}
        )
        </foreach>
    </insert>

	<!-- 删除-->
	<update id="delete" parameterType="java.lang.Long">
		delete from check_free_package
		where 
			id = #{value}
	</update>

	<!-- 修改 -->
	<update id="update" parameterType="FreePackage">
		update check_free_package
			set 
			<if test="officeId!=null">
                office_id = #{officeId},
			</if>
			<if test="freePackageId!=null">
				free_package_id = #{freePackageId},
			</if>
			<if test="reservePackageId!=null">
				reserve_package_id = #{reservePackageId},
			</if>
			id = id
			where 
				id = #{id}
	</update>
	
	
	<!-- 通过id获取数据 -->
	<select id="findById" parameterType="java.lang.Long" resultMap="freePackageResultMap">
		select * from 
			check_free_package
		where 
			id = #{value}
	</select>
	
	<!-- 条件查询 -->
	<select id="findByCondition" parameterType="FreePackage" resultMap="freePackageResultMap">
		select * from 
			check_free_package where 1=1
			<if test="createUserId!=null and createUserId!=''">
				and create_user_id = #{createUserId}
			</if>
			<if test="officeId!=null">
				and office_id = #{officeId}
			</if>
			<if test="freePackageId!=null">
				and free_package_id = #{freePackageId}
			</if>
			<if test="reservePackageId!=null">
				and reserve_package_id = #{reservePackageId}
			</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultMap="freePackageResultMap">
		select * from 
				check_free_package a where 1=1
		<if test="pd.query_time_start!=null and pd.query_time_start!=''"><!-- 时间检索 -->
			and a.create_time &gt;= #{pd.query_time_start}
		</if>
		<if test="pd.query_time_end!=null and pd.query_time_end!=''"><!-- 时间检索 -->
			and a.create_time &lt;= #{pd.query_time_end}
		</if>	
		<if test="pd.query_key!=null and pd.query_key!=''"><!-- 关键字检索 -->
			and a.name like concat('%',#{pd.query_key},'%')
		</if>
			order by a.create_time desc	
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="String" resultMap="freePackageResultMap">
		select * from check_free_package a
	</select>
	
	<!-- 批量删除 -->
	<update id="deleteBatch" parameterType="String">
		delete from check_free_package
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</update>
	
</mapper>