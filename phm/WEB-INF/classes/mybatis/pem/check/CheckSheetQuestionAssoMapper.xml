<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CheckSheetQuestionAssoMapper">
	<resultMap type="CheckSheetQuestionAsso" id="checkSheetQuestionAssoResultMap">
		<id column="id" property="id"/>
		<result column="sheet_id" property="sheetId"/>
		<result column="question_id" property="questionId"/>
		<result column="question_seq" property="questionSeq"/>
		<result column="create_user_id" property="createUserId"/>
		<result column="create_time" property="createTime"/>
		<result column="update_user_id" property="updateUserId"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>
	
	<!-- 新增-->
	<insert id="save" parameterType="CheckSheetQuestionAsso" useGeneratedKeys="true" keyProperty="id">
		insert into check_sheet_question_asso(
			sheet_id,
			question_id,
			question_seq,
			create_user_id,
			create_time
		) values (
			#{sheetId},
			#{questionId},
			#{questionSeq},
			#{createUserId},
			#{createTime}
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="java.lang.Long">
		delete from check_sheet_question_asso
		where 
			id = #{value}
	</delete>

	<!-- 修改 -->
	<update id="update" parameterType="CheckSheetQuestionAsso">
		update check_sheet_question_asso
			set 
			<if test="sheetId != null">
				sheet_id = #{sheetId},
			</if>
			<if test="questionId != null">
				question_id = #{questionId},
			</if>
			<if test="questionSeq != null">
				question_seq = #{questionSeq},
			</if>
			id = id
			where 
				id = #{id}
	</update>
	
	
	<!-- 通过id获取数据 -->
	<select id="findById" parameterType="java.lang.Long" resultMap="checkSheetQuestionAssoResultMap">
		select * from 
			check_sheet_question_asso
		where 
			id = #{value}
	</select>
	
	<!-- 条件查询 -->
	<select id="findByCondition" parameterType="CheckSheetQuestionAsso" resultMap="checkSheetQuestionAssoResultMap">
		select * from 
			check_sheet_question_asso where 1=1
			<if test="createUserId != null and createUserId != ''">
				and create_user_id = #{createUserId}
			</if>
			<if test="sheetId != null">
				and sheet_id = #{sheetId}
			</if>
			<if test="questionId != null">
				and question_id = #{questionId}
			</if>
			<if test="questionSeq != null">
				and question_seq = #{questionSeq}
			</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultMap="checkSheetQuestionAssoResultMap">
		select * from 
				check_sheet_question_asso a where 1=1
		<if test="pd.query_time_start != null and pd.query_time_start!=''"><!-- 时间检索 -->
			and a.create_time &gt;= #{pd.query_time_start}
		</if>
		<if test="pd.query_time_end!=null and pd.query_time_end != ''"><!-- 时间检索 -->
			and a.create_time &lt;= #{pd.query_time_end}
		</if>
		order by a.create_time desc	
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="String" resultMap="checkSheetQuestionAssoResultMap">
		select * from check_sheet_question_asso a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteBatch" parameterType="String">
		delete from check_sheet_question_asso
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 获取用户测试题目总数量 -->
	<select id="getPatientQuestionCount" parameterType="java.util.List" resultType="Integer">
		select count(*) from check_sheet_question_asso a 
		where a.sheet_id in 
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</select>
	
</mapper>