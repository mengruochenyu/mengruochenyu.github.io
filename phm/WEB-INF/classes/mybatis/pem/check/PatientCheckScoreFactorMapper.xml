<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PatientCheckScoreFactorMapper">
	<resultMap type="PatientCheckScoreFactor" id="patientCheckScoreFactorResultMap">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="score" property="score"/>
		<result column="suggest" property="suggest"/>
		<result column="remark" property="remark"/>
		<result column="sheet_id" property="sheetId"/>
		<result column="question_id_str" property="questionIdStr"/>
		<result column="option_id_str" property="optionIdStr"/>
		<result column="create_user_id" property="createUserId"/>
		<result column="create_time" property="createTime"/>
		<result column="update_user_id" property="updateUserId"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>
	
	<!-- 新增-->
	<insert id="save" parameterType="PatientCheckScoreFactor" useGeneratedKeys="true" keyProperty="id">
		insert into patient_check_score_factor(
			name,
			score,
			suggest,
			remark,
			sheet_id,
			question_id_str,
			option_id_str,
			create_user_id,
			create_time
		) values (
			#{name},
			#{score},
			#{suggest},
			#{remark},
			#{sheetId},
			#{questionIdStr},
			#{optionIdStr},
			#{createUserId},
			#{createTime}
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="java.lang.Long">
		delete from patient_check_score_factor
		where 
			id = #{value}
	</delete>

	<!-- 修改 -->
	<update id="update" parameterType="PatientCheckScoreFactor">
		update patient_check_score_factor
			set 
			<if test="name != null and name != ''">
				name = #{name},
			</if>
			<if test="score != null">
				score = #{score},
			</if>
			<if test="suggest != null and suggest != ''">
                suggest = #{suggest},
			</if>
			<if test="remark != null and remark != ''">
				remark = #{remark},
			</if>
			<if test="sheetId != null">
				sheet_id = #{sheetId},
			</if>
			<if test="questionIdStr != null and questionIdStr != ''">
				question_id_str = #{questionIdStr},
			</if>
			<if test="optionIdStr != null and optionIdStr != ''">
				option_id_str = #{optionIdStr},
			</if>
			id = id
			where 
				id = #{id}
	</update>
	
	
	<!-- 通过id获取数据 -->
	<select id="findById" parameterType="java.lang.Long" resultMap="patientCheckScoreFactorResultMap">
		select * from 
			patient_check_score_factor
		where 
			id = #{value}
	</select>
	
	<!-- 条件查询 -->
	<select id="findByCondition" parameterType="PatientCheckScoreFactor" resultMap="patientCheckScoreFactorResultMap">
		select * from 
			patient_check_score_factor where 1=1
			<if test="createUserId != null and createUserId != ''">
				and create_user_id = #{createUserId}
			</if>
			<if test="name != null and name != ''">
				and name = #{name}
			</if>
			<if test="score != null">
				and score = #{score}
			</if>
			<if test="suggest != null and suggest != ''">
                and suggest LIKE concat("%",#{pd.suggest},"%")
			</if>
			<if test="remark != null and remark != ''">
				and remark = #{remark}
			</if>
			<if test="sheetId != null">
				and sheet_id = #{sheetId}
			</if>
			<if test="questionIdStr != null and questionIdStr != ''">
				and question_id_str = #{questionIdStr}
			</if>
			<if test="optionIdStr != null and optionIdStr != ''">
				and option_id_str = #{optionIdStr}
			</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultMap="patientCheckScoreFactorResultMap">
		select * from 
				patient_check_score_factor a where 1=1
		<if test="pd.query_time_start != null and pd.query_time_start!=''"><!-- 时间检索 -->
			and a.create_time &gt;= #{pd.query_time_start}
		</if>
		<if test="pd.query_time_end!=null and pd.query_time_end != ''"><!-- 时间检索 -->
			and a.create_time &lt;= #{pd.query_time_end}
		</if>
		<if test="pd.suggest!=null and pd.suggest != ''"><!-- 时间检索 -->
			and a.suggest LIKE concat("%",#{pd.suggest},"%")
		</if>
		order by a.create_time desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="String" resultMap="patientCheckScoreFactorResultMap">
		select * from patient_check_score_factor a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteBatch" parameterType="String">
		delete from patient_check_score_factor
		where 
			id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
</mapper>